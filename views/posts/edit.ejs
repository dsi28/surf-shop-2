<% layout('layouts/boilerplate') -%>
<h1>Post edit</h1>
<form method='POST' action='/posts/<%=post.id%>?_method=PUT'>
    <div>
        <label for='title'>Title</label>
        <input type='text' id='title' name='post[title]' value='<%=post.title%>' required>
    </div>
    <div>
        <label for='price'>Price</label>
        <input type='number' id='price' name='post[price]' value='<%=post.price%>' required>
    </div>    
    <div>
        <label for='desc'>Description</label>
        <input type='text' id='desc' name='post[desc]' value='<%=post.desc%>' required>
    </div>
    <input type='submit' value='Update'>
</form>