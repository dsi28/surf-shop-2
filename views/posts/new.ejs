<% layout('layouts/boilerplate') -%>
<h1>Post new</h1>
<form method='POST' action='/posts'>
    <div>
        <label for='title'>Title</label>
        <input type='text' id='title' name='post[title]' placeholder='title' required>
    </div>
    <div>
        <label for='price'>Price</label>
        <input type='number' id='price' name='post[price]' placeholder='price' required>
    </div>    
    <div>
        <label for='desc'>Description</label>
        <input type='text' id='desc' name='post[desc]' placeholder='Descriptions' required>
    </div>
    <input type='submit' value='Create'>
</form>